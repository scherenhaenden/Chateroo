{
  "name": "chateroo",
  "version": "1.0.0",
  "type": "commonjs",
  "description": "AI Chat Assistant with conversational memory",
  "keywords": [
    "ai",
    "chat",
    "assistant",
    "tauri",
    "desktop"
  ],
  "author": "scherenhaenden <scherenhaenden@gmail.com>",
  "license": "UNLICENSED",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm:dev:frontend\" \"npm:dev:backend\"",
    "dev:frontend": "npm run --workspace=frontend start",
    "dev:backend": "npm run --workspace=backend start:dev",
    "build:frontend": "npm run --workspace=frontend build",
    "build:backend": "bash scripts/build-backend.sh",
    "build:backend:tauri": "npm run build:backend",
    "build:all": "npm run build:frontend && npm run build:backend",
    "tauri": "tauri",
    "tauri:dev": "tauri dev",
    "tauri:build": "npm run build:backend:tauri && tauri build",
    "tauri:build:debug": "npm run build:backend:tauri && tauri build --debug"
  },
  "devDependencies": {
    "@tauri-apps/cli": "^2.7.1",
    "concurrently": "^9.2.0"
  },
  "dependencies": {
    "@tauri-apps/api": "^2.7.0",
    "tauri-plugin-store-api": "^0.0.0"
  }
}
